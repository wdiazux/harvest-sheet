# Example .env for Docker or local use
HARVEST_ACCOUNT_ID=my_harvest_account_id
HARVEST_AUTH_TOKEN=my_harvest_auth_token
HARVEST_USER_AGENT=user@email.com
FROM_DATE=2025-04-14 # (Optional) Only if you want a specific date range
TO_DATE=2025-04-20 # (Optional) Only if you want a specific date range
CSV_OUTPUT_FILE=harvest_export.csv

# --- Google Sheets Credentials (all required) ---
# Only split environment variables are supported. All below are required for Google Sheets upload.
GOOGLE_SA_PROJECT_ID=your_project_id
GOOGLE_SA_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_SA_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n
GOOGLE_SA_CLIENT_EMAIL=your_service_account_email@your_project.iam.gserviceaccount.com
GOOGLE_SA_CLIENT_ID=your_client_id
# Optional:
GOOGLE_SA_UNIVERSE_DOMAIN=googleapis.com

# Google Sheets target (required for upload)
GOOGLE_SHEET_ID=your_google_sheet_id
GOOGLE_SHEET_TAB_NAME=your_tab_name
UPLOAD_TO_GOOGLE_SHEET=1
